{
  "compilerOptions": {
    "target": "es2023",
    "lib": ["es2023", "dom"],
    "module": "preserve",
    "moduleResolution": "bundler",
    "isolatedModules": false,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "include": ["./*"]
}
