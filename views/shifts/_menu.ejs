<aside class="menu" aria-label="<%= configFunctions.getConfigProperty('shifts.sectionName') %> Menu">
  <% if (user.userProperties.shifts.canUpdate) { %>
  <ul class="menu-list">
    <li>
      <a
        href="<%= urlPrefix %>/<%= configFunctions.getConfigProperty('shifts.router') %>/new"
        title="Create New <%= configFunctions.getConfigProperty('shifts.sectionNameSingular') %>"
      >
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon is-small">
              <i class="fa-solid fa-plus"></i>
            </span>
          </div>
          <div class="column is-hidden-touch">
            Create New <%= configFunctions.getConfigProperty('shifts.sectionNameSingular') %>
          </div>
        </div>
      </a>
    </li>
  </ul>
  <% } %>
  <h2 class="menu-label is-hidden-touch">
    <%= configFunctions.getConfigProperty('shifts.sectionName') %>
  </h2>
  <ul class="menu-list">
    <li>
      <a
        class="<%= headTitle.endsWith(' - Search') ? 'is-active' : '' %>"
        href="<%= urlPrefix %>/<%= configFunctions.getConfigProperty('shifts.router') %>"
        title="<%= configFunctions.getConfigProperty('shifts.sectionNameSingular') %> Search">
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon is-small"><i class="fa-solid fa-search"></i></span>
          </div>
          <div class="column is-hidden-touch">
            <%= configFunctions.getConfigProperty('shifts.sectionNameSingular') %> Search
          </div>
        </div>
      </a>
    </li>
    <% if (user.userProperties.shifts.canUpdate) { %>
    <li>
      <a
        class="<%= headTitle === 'Crew Maintenance' ? 'is-active' : '' %>"
        href="<%= urlPrefix %>/<%= configFunctions.getConfigProperty('shifts.router') %>/crews"
        title="Crew Maintenance">
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon is-small"><i class="fa-solid fa-users"></i></span>
          </div>
          <div class="column is-hidden-touch">
            Crew Maintenance
          </div>
        </div>
      </a>
    </li>
    <% } %>
    <li>
      <a
        href="<%= urlPrefix %>/<%= configFunctions.getConfigProperty('shifts.router') %>/builder"
        title="<%= configFunctions.getConfigProperty('shifts.sectionNameSingular') %> Builder">
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon is-small"><i class="fa-solid fa-calendar-days"></i></span>
          </div>
          <div class="column is-hidden-touch">
            <%= configFunctions.getConfigProperty('shifts.sectionNameSingular') %> Builder
          </div>
        </div>
      </a>
    </li>
  </ul>
  <p class="menu-label is-hidden-touch">
    Tools
  </p>
  <ul class="menu-list">
    <% if (user.userProperties.shifts.canManage) { %>
    <li>
      <a
        class="<%= headTitle.endsWith(' - Record Recovery') ? 'is-active' : '' %>"
        href="<%= urlPrefix %>/<%= configFunctions.getConfigProperty('shifts.router') %>/recovery"
        title="Record Recovery">
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon is-small"><i class="fa-solid fa-trash-arrow-up"></i></span>
          </div>
          <div class="column is-hidden-touch">
            Record Recovery
          </div>
        </div>
      </a>
    </li>
    <% } %>
    <li>
      <a
        href="<%= urlPrefix %>/dashboard/reports/?tab=shifts"
        title="<%= configFunctions.getConfigProperty('shifts.sectionNameSingular') %> Reports">
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon is-small"><i class="fa-solid fa-file-lines"></i></span>
          </div>
          <div class="column is-hidden-touch">
            Reports
          </div>
        </div>
      </a>
    </li>

    <li>
      <a
        href="https://cityssm.github.io/shiftlog/docs/shifts.html"
        title="<%= configFunctions.getConfigProperty('shifts.sectionNameSingular') %> Help"
        rel="noopener noreferrer"
        target="_blank"
      >
        <div class="columns is-mobile is-1">
          <div class="column is-narrow">
            <span class="icon is-small">
              <i class="fa-solid fa-question-circle"></i>
            </span>
          </div>
          <div class="column is-hidden-touch">
            Help
          </div>
        </div>
      </a>
    </li>
  </ul>
</aside>