<!DOCTYPE html>
<!-- eslint-disable-next-line html/require-closing-tags -->
<html class="has-navbar-fixed-top is-fullwidth" data-theme="light" lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content="<%= csrfToken %>" />

    <title>
      <%= headTitle %>:
      <%= configFunctions.getConfigProperty("application.applicationName") %>
    </title>

    <link href="<%= urlPrefix %>/images/logo.png" rel="icon" />

    <link href="<%= urlPrefix %>/lib/cityssm-bulma-sticky-table/bulma-with-sticky-table.css" rel="stylesheet" />
    <link href="<%= urlPrefix %>/lib/cityssm-fa-glow/fa-glow.min.css" rel="stylesheet" />
    <link href="<%= urlPrefix %>/lib/flatpickr/flatpickr.min.css" rel="stylesheet" />
    <link href="<%= urlPrefix %>/lib/leaflet/leaflet.css" rel="stylesheet" />
    <link href="<%= urlPrefix %>/stylesheets/style.css" rel="stylesheet" />
  </head>

  <!-- eslint-disable-next-line html/require-closing-tags -->
  <body>
    <nav
      class="navbar is-light is-fixed-top"
      id="cityssm-theme--navbar"
      role="navigation"
      aria-label="main navigation"
    >
      <div class="container is-fullhd px-3">
        <div class="navbar-brand">
          <a class="navbar-item"
            href="<%= urlPrefix %>/dashboard"
          >
            <img
              src="<%= urlPrefix %>/images/logo.png"
              alt=""
              height="28"
              width="28"
            />
            <strong><%= configFunctions.getConfigProperty("application.applicationName") %></strong>
          </a>
          <a
            class="navbar-burger burger is-hidden-print"
            role="button"
            aria-label="menu"
            aria-expanded="false"
          >
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>

        <div class="navbar-menu">
          <div class="navbar-start">
            <% if (configFunctions.getConfigProperty('workOrders.isEnabled') && user.userProperties.workOrders.canView) { %>
            <a class="navbar-item" href="<%= urlPrefix %>/<%= configFunctions.getConfigProperty('workOrders.router') %>">
              <span class="icon">
                <i class="fa-solid <%= configFunctions.getConfigProperty('workOrders.iconClass') %>"></i>
              </span>
              <span>
                <%= configFunctions.getConfigProperty('workOrders.sectionName') %>
              </span>
            </a>
            <% } %>
            <% if (configFunctions.getConfigProperty('shifts.isEnabled') && user.userProperties.shifts.canView) { %>
            <a class="navbar-item" href="<%= urlPrefix %>/<%= configFunctions.getConfigProperty('shifts.router') %>">
              <span class="icon">
                <i class="fa-solid <%= configFunctions.getConfigProperty('shifts.iconClass') %>"></i>
              </span>
              <span>
                <%= configFunctions.getConfigProperty('shifts.sectionName') %>
              </span>
            </a>
            <% } %>
            <% if (configFunctions.getConfigProperty('timesheets.isEnabled') && user.userProperties.timesheets.canView) { %>
            <a class="navbar-item" href="<%= urlPrefix %>/<%= configFunctions.getConfigProperty('timesheets.router') %>">
              <span class="icon">
                <i class="fa-solid <%= configFunctions.getConfigProperty('timesheets.iconClass') %>"></i>
              </span>
              <span>
                <%= configFunctions.getConfigProperty('timesheets.sectionName') %>
              </span>
            </a>
            <% } %>
            <a class="navbar-item" href="<%= urlPrefix %>/dashboard/reports">
              <span class="icon">
                <i class="fa-solid fa-file-lines"></i>
              </span>
              <span>
                Reports
              </span>
            </a>
          </div>
          <div class="navbar-end">
            <div class="navbar-item has-dropdown">
              <a class="navbar-link" href="#">
                <span class="icon">
                  <i class="fa-solid fa-user"></i>
                </span>
                <span><%= user.userName %></span>
              </a>
              <div class="navbar-dropdown is-right">
                <a class="navbar-item" href="<%= urlPrefix %>/dashboard/userSettings">
                  <span class="icon">
                    <i class="fa-solid fa-cog"></i>
                  </span>
                  <span>User Settings</span>
                </a>
                <a
                  class="navbar-item"
                  id="cityssm-theme--logout-button"
                  href="#"
                  role="button"
                >
                  <span class="icon">
                    <i class="fa-solid fa-sign-out-alt"></i>
                  </span>
                  <span>Log Out</span>
                </a>
                <hr class="navbar-divider" />
                <a
                  class="navbar-item"
                  href="https://cityssm.github.io/shiftlog/docs"
                  rel="noopener noreferrer"
                  target="_blank"
                >
                  <span class="icon">
                    <i class="fa-solid fa-question-circle"></i>
                  </span>
                  <span>Help</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- eslint-disable-next-line html/require-closing-tags -->
    <main
      class="container is-fullhd pt-2 px-3 mr-auto"
      style="min-height: calc(100vh - var(--bulma-navbar-height));"
    >